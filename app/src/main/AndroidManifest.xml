<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarioBros"
        tools:targetApi="31">
        <activity
            android:name=".Ajustes"
            android:exported="false" />

        <activity
            android:name=".DetallesPersonaje"
            android:exported="false" />
        <!--
        Para poner una activity como principal lo primero que tenemos que tener es 2 activity una que es la encargada de mostrar el splash y otra de
        mostrar el contenido de la misma
        -->
        <activity
            android:name=".PantallaInicio.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>