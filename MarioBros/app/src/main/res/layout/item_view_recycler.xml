<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">
<!--Una vez echo el primer paso que recordemos el primer paso es Â¿Que datos va a tener nuestro RecyclerView? este primer paso
esta en el archivo (info_personajes), continuamos con el  segundo paso como se vera el recycler view-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView"
            android:contentDescription="@string/personaje_de_mario"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@id/imageView"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            tools:text="@string/nombre" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/imageView"
            android:layout_marginTop="10dp"
            android:background="#DAD8D8"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
